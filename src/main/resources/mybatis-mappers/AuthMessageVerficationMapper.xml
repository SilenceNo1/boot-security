<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boot.security.server.dao.AuthMessageVerficationDao">

	<sql id="where">
		<where>
			<if test="params.id != null and params.id != ''">
				and id = #{params.id} 
			</if>
			<if test="params.mesAddtime != null and params.mesAddtime != ''">
				and mes_addtime = #{params.mesAddtime} 
			</if>
			<if test="params.mesCode != null and params.mesCode != ''">
				and mes_code = #{params.mesCode} 
			</if>
			<if test="params.mesErrorNumber != null and params.mesErrorNumber != ''">
				and mes_error_number = #{params.mesErrorNumber} 
			</if>
			<if test="params.mesExpirytime != null and params.mesExpirytime != ''">
				and mes_expirytime = #{params.mesExpirytime} 
			</if>
			<if test="params.mesPhone != null and params.mesPhone != ''">
				and mes_phone = #{params.mesPhone} 
			</if>
		
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from auth_message_verfication t
		<include refid="where" />
	</select>

	<select id="list" resultType="AuthMessageVerfication">
		select * from auth_message_verfication t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update auth_message_verfication t
		<set>
			<if test="mesAddtime != null">
				mes_addtime = #{mesAddtime}, 
			</if>
			<if test="mesCode != null">
				mes_code = #{mesCode}, 
			</if>
			<if test="mesErrorNumber != null">
				mes_error_number = #{mesErrorNumber}, 
			</if>
			<if test="mesExpirytime != null">
				mes_expirytime = #{mesExpirytime}, 
			</if>
			<if test="mesPhone != null">
				mes_phone = #{mesPhone}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
