<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boot.security.server.dao.GuowangCompanyDao">

	<sql id="where">
		<where>
			<if test="params.id != null and params.id != ''">
				and id = #{params.id} 
			</if>
			<if test="params.no != null and params.no != ''">
				and no = #{params.no} 
			</if>
			<if test="params.name != null and params.name != ''">
				and name = #{params.name} 
			</if>
			<if test="params.packageName != null and params.packageName != ''">
				and package_name = #{params.packageName} 
			</if>
			<if test="params.companyName != null and params.companyName != ''">
				and company_name = #{params.companyName} 
			</if>
			<if test="params.address != null and params.address != ''">
				and address = #{params.address} 
			</if>
			<if test="params.tel != null and params.tel != ''">
				and tel = #{params.tel} 
			</if>
			<if test="params.email != null and params.email != ''">
				and email = #{params.email} 
			</if>
		
		</where>
	</sql>

	<select id="count" resultType="int">
		select count(1) from guowang_company t
		<include refid="where" />
	</select>

	<select id="list" resultType="GuowangCompany">
		select * from guowang_company t
		<include refid="where" />
		${params.orderBy}
		limit #{offset}, #{limit}
	</select>

	<update id="update">
		update guowang_company t
		<set>
			<if test="no != null">
				no = #{no}, 
			</if>
			<if test="name != null">
				name = #{name}, 
			</if>
			<if test="packageName != null">
				package_name = #{packageName}, 
			</if>
			<if test="companyName != null">
				company_name = #{companyName}, 
			</if>
			<if test="address != null">
				address = #{address}, 
			</if>
			<if test="tel != null">
				tel = #{tel}, 
			</if>
			<if test="email != null">
				email = #{email}, 
			</if>

		</set>

		where t.id = #{id}
	</update>

</mapper>
